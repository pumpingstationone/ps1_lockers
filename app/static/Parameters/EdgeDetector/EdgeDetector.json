{
    "EdgeDetector": {
        "ports": {
            "input": {
                "type": "input",
                "datatype": "bool",
                "default": null
            },
            "event": {
                "type": "output",
                "datatype": "bool",
                "default": null
            }
        },
        "size": [
            90,
            35
        ],
        "constants": {
            "edge_detect": {
                "type": "select",
                "options": {
                    "rising": "rising",
                    "falling": "falling"
                },
                "state": "both",
                "help": "takes a boolean and on state change if edge is rising or falling message is sent"
            },
            "initial_state": {
                "type": "checkbox",
                "state": false,
                "help": "assumed initial state"
            }
        },
        "datatype": "bool",
        "up": {
            "can_go_up": true,
            "type": "output",
            "order": 999
        },
        "broadcast": false
    }
}